@page
@model Web.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
	ViewBag.Title = "Все обсуждения";	
}

<link rel="stylesheet" href="/Styles/StyleSheet.css">

@foreach (var item in Model.Discussions)
{
	<div class="conteiner"> 
		<a asp-page ="CurrentPage" asp-route-id ="@item.Id">
			<div class="mainText">@item.Name</div>
			<div class="text">@item.Description</div>
		</a>
	</div>
}

<div class="addText">
	<div class="addTextTitle">Добавить своё обсуждение</div>
	<form method="post">
		<ul>
			<li><div>Введите имя</div></li>
			<li><input type="text" name="username" required/></li>
			<li><div>Введите название обсуждения</div></li>
			<li><input type="text" name="discussionsname" required/></li>
			<li><div>Опишите своё обсуждение</div></li>
			<li><textarea class="commentText" type="text" name="description" required></textarea></li>
			<li><input type="submit" value="Отправить"/></li>
		</ul>
	</form>

</div>
